<div class="col-12 col-md-8 offset-md-2 col-lg-4 offset-lg-4">
  <form class="card" method="POST" action="/sign-in">
    <div class="card-body">
      <div class="mb-3">
        <h4>Sign in to create quizzes</h4>
      </div>
      {{#if flash }}
      <div class="alert alert-{{ flash.type }}">
        {{#each flash.errors}}
        {{ this.msg }}<br>
        {{/each}}
      </div>
      {{/if}}
      <div class="mb-3">
        <input type="email" class="form-control" name="emailAddress" placeholder="Email address"
          value="{{#if flash}}{{flash.emailAddress}}{{/if}}">
      </div>
      <div class="mb-3">
        <input type="password" class="form-control" name="password" placeholder="Password">
      </div>
      <button type="submit" class="btn btn-primary">Sign in</button>
      <div class="mt-3 form-text small">No account? <a href="/create-account">Create one now!</a></div>
    </div>
  </form>
</div>