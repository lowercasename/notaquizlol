<div class="col-12 col-md-8 offset-md-2 col-lg-4 offset-lg-4">
  <form class="card" method="POST" action="/create-account">
    <div class="card-body">
      <div class="mb-3">
        <h4>Create an account</h4>
      </div>
      {{#if flash }}
        <div class="alert alert-{{ flash.type }}">
          {{#each flash.errors}}
            {{ this.msg }}<br>
          {{/each}}
        </div>
      {{/if}}
      <div class="mb-3">
        <input type="text" class="form-control" name="firstName" placeholder="First name" value="{{#if flash}}{{flash.firstName}}{{/if}}">
      </div>
      <div class="mb-3">
        <input type="email" class="form-control" name="emailAddress" placeholder="Email address" value="{{#if flash}}{{flash.emailAddress}}{{/if}}">
      </div>
      <div class="mb-3">
        <input type="password" class="form-control" name="password" placeholder="Password">
      </div>
      <div class="mb-3">
        <input type="password" class="form-control" name="repeatPassword" placeholder="Repeat password">
      </div>
      <button type="submit" class="btn btn-primary">Create account</button>
      <div class="mt-3 form-text small">Already have an account? <a href="/">Sign in here!</a></div>
    </div>
  </form>
</div>